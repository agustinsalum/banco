<%= form_with model: @locality do |form| %>
  <div class="card">
    <div class="card-body">
        
        <div class="mb-3">
            <%= form.label :name_locality %><br>
            <%= form.text_field :name_locality %>
        </div>

        <div class="mb-3">
            <%= form.label :province %><br>
            <%= form.select :province_id, options_from_collection_for_select(@provinces, :id, :name_province, include_blank: "Seleccione provincia") %>
        </div>

        <%= form.submit :Enviar, class: 'btn btn-success'%> |
        <%= form.submit "Limpiar", :type => "reset", class: "btn btn-primary" %>
    </div>
</div>
<% end %>