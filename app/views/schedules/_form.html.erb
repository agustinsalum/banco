
<!-- En el caso de agregar el editar -> https://stackoverflow.com/questions/14740702/form-for-undefined-method-user-path -->        
<%= form_for [@subsidiary, @schedule] do |form| %>
    <div class="card">
    <div class="card-body">
        
        <div class="mb-3">
            <%= form.label :day_week %><br>
             <%= form.select :day_week, [@days[0],@days[1],@days[2],@days[3],@days[4]] %>
        </div>
        
        <div class="mb-3">
            <%= form.label :hour_since %><br>
            <%= form.time_field :hour_since %>
        </div>
        
        <div class="mb-3">
            <%= form.label :hour_until %><br>
            <%= form.time_field :hour_until %>
        </div>
        
        <%= form.submit :Guardar, class: 'btn btn-success'%> |
        <%= form.submit "Limpiar", :type => "reset", class: "btn btn-primary" %>
    </div>
</div>
<%end%>