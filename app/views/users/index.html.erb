
<% flash.each do |flash_type, message| %>
  <% if flash[:success] %>
    <div class="alert alert-success" role="alert">
      <%= message %>
    </div>
  <% else %>
    <% if flash[:danger] %>
      <div class="alert alert-danger" role="alert">
       <%= message %>
      </div>
    <% end %>
  <% end %>
<% end %>

